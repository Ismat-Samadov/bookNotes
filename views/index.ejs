<!DOCTYPE html>
<html lang="en">

<head>
    <!-- ... Your existing head content ... -->
</head>

<body>
    <h1>My Book Collection</h1>

<ul>
    <% books.forEach(book=> { %>
        <li>
            <strong>
                <%= book.book_name %>
            </strong> by <%= book.note_auth_name %>
                <p>Note: <%= book.note %>
                </p>
                <p>Note Date: <%= book.note_date.toISOString().slice(0, 10) %>
                </p>

                <!-- Update the form for editing a book -->
                <form action="/edit/<%= book.id %>" method="get">
                    <button type="submit">Edit</button>
                </form>

                <!-- Update the form for deleting a book -->
                <form action="/delete/<%= book.id %>" method="post">
                    <button type="submit">Delete</button>
                </form>
        </li>
        <% }); %>
</ul>
    



    <h2>Add a New Book Note</h2>
    <form action="/add" method="post">
        <label for="bookName">Book Name:</label>
        <input type="text" id="bookName" name="bookName" required>

        <label for="author">Author:</label>
        <input type="text" id="author" name="author" required>

        <label for="note">Note:</label>
        <textarea id="note" name="note" required></textarea>

        <button type="submit">Add Note</button>
    </form>

    <!-- ... Your existing body content ... -->
</body>

</html>